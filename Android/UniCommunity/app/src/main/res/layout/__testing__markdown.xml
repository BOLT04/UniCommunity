<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".testing.markdowntesting.MarkdownActivity" android:id="@+id/coordinatorLayout">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text" app:layout_constraintEnd_toEndOf="@+id/markdownBtn"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/textBtn"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textBtn"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/htmlBtn"
            app:layout_constraintBottom_toBottomOf="@+id/textBtn" app:layout_constraintTop_toTopOf="@+id/textBtn"
            app:layout_constraintStart_toEndOf="@+id/textBtn" android:layout_marginStart="28dp"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/markdownBtn"
            app:layout_constraintBottom_toBottomOf="@+id/htmlBtn" app:layout_constraintTop_toTopOf="@+id/htmlBtn"
            app:layout_constraintStart_toEndOf="@+id/htmlBtn" android:layout_marginStart="28dp"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>