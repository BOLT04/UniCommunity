<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="394dp"
            android:layout_height="582dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/recyclerView_forum"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/forum_title"
            android:layout_marginTop="28dp"/>
    <Button
            android:text="@string/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forum_additem"
            app:layout_constraintBottom_toBottomOf="@+id/forum_title"
            app:layout_constraintTop_toTopOf="@+id/forum_title" app:layout_constraintStart_toEndOf="@+id/forum_title"
            android:layout_marginStart="140dp" app:layout_constraintVertical_bias="0.606"/>
    <TextView
            android:text="@string/forum"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/forum_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>