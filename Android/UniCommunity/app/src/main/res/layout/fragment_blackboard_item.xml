<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/blackboard_item_edit">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/blacboard_item_permissionButton" android:layout_marginTop="608dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="324dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="blackboard_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackboard_item_name"
            app:layout_constraintTop_toBottomOf="@+id/blackboard_item_authorname" android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="blackboard_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackboard_item_content"
            app:layout_constraintTop_toBottomOf="@+id/blackboard_item_name" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
    <TextView
            android:text="blackboard_item_authorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackboard_item_authorname"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="blackboard_item_createdat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackboard_item_createdat"
            app:layout_constraintStart_toEndOf="@+id/blackboard_item_authorname" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/blackboard_item_authorname"
            app:layout_constraintBottom_toBottomOf="@+id/blackboard_item_authorname"/>
</androidx.constraintlayout.widget.ConstraintLayout>