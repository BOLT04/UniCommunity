<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout2">

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonA"
            app:layout_constraintStart_toStartOf="@+id/textViewA"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textViewA"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonB"
            app:layout_constraintStart_toStartOf="@+id/textViewB" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewB"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonC"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewC" app:layout_constraintStart_toStartOf="@+id/textViewC"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewA"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewB"
            app:layout_constraintStart_toStartOf="@+id/textViewA"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonA"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewC"
            app:layout_constraintStart_toStartOf="@+id/textViewA"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonB"/>
    <Button
            android:text="activity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/act1btn"
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonC" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"/>
    <Button
            android:text="activity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/act2btn" android:layout_marginTop="140dp"
            app:layout_constraintStart_toEndOf="@+id/act1btn"
            android:layout_marginStart="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/act1btn" app:layout_constraintTop_toTopOf="@+id/act1btn"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>