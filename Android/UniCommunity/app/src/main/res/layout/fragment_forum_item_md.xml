<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout8">


    <br.tiagohm.markdownview.MarkdownView
            android:id="@+id/forum_item_content_md"
            app:escapeHtml="false"
            android:layout_width="0dp"
            android:layout_height="521dp" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forum_item_title"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:id="@+id/forum_item_title" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forum_item_author"
            app:layout_constraintTop_toTopOf="@+id/forum_item_comments_btn" app:layout_constraintBottom_toBottomOf="@+id/forum_item_comments_btn"
            app:layout_constraintVertical_bias="0.379" app:layout_constraintStart_toEndOf="@+id/forum_item_comments_btn"
            android:layout_marginStart="60dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forum_item_created_at"
            app:layout_constraintTop_toTopOf="@+id/forum_item_author" app:layout_constraintBottom_toBottomOf="@+id/forum_item_author"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/forum_item_author"
            android:layout_marginStart="48dp"/>
    <Button
            android:text="@string/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forum_item_comments_btn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/forum_item_content_md"/>


</androidx.constraintlayout.widget.ConstraintLayout>