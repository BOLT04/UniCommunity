<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout">

    <TextView
            android:text="TextView"
            android:layout_width="201dp"
            android:layout_height="wrap_content" android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="68dp"
            android:layout_height="0dp" android:id="@+id/checkBox"
            app:layout_constraintStart_toEndOf="@+id/title"
            android:layout_marginStart="88dp"
            app:layout_constraintTop_toTopOf="@+id/title"/>
    <TextView
            android:text="TextView"
            android:layout_width="346dp"
            android:layout_height="63dp" android:id="@+id/content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>