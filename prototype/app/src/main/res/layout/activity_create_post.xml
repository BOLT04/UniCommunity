<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CreatePostActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Title"
            android:ems="10"
            tools:layout_editor_absoluteY="41dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/titleTxtView"/>
    <EditText
            android:layout_width="217dp"
            android:layout_height="90dp"
            android:inputType="textMultiLine"
            android:ems="10"
            tools:layout_editor_absoluteY="116dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/contentTxtView"
            android:text="Text"/>
    <Button
            android:text="Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="435dp"
            tools:layout_editor_absoluteX="142dp" android:id="@+id/createBtn"/>
</android.support.constraint.ConstraintLayout>