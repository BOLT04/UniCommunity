<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CreateBoardActivity">

    <EditText
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/descText"
            android:text="Description" android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/nameText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nameText" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
            android:text="Forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/forumCheckBox" tools:layout_editor_absoluteY="221dp"
            tools:layout_editor_absoluteX="77dp"/>
    <CheckBox
            android:text="Sumarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sumariosCheckBox"
            tools:layout_editor_absoluteY="268dp"
            tools:layout_editor_absoluteX="73dp"/>
    <CheckBox
            android:text="Recursos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recursosCheckBox"
            tools:layout_editor_absoluteY="312dp"
            tools:layout_editor_absoluteX="73dp"/>
    <CheckBox
            android:text="Anuncios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/anunciosCheckBox"
            tools:layout_editor_absoluteY="353dp"
            tools:layout_editor_absoluteX="77dp"/>
    <CheckBox
            android:text="Bibliografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bibliografiaCheckBox"
            tools:layout_editor_absoluteY="396dp"
            tools:layout_editor_absoluteX="77dp"/>
    <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="447dp"
            tools:layout_editor_absoluteX="158dp" android:id="@+id/createBtn"/>
</android.support.constraint.ConstraintLayout>